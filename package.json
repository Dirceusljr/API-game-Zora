    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.8",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "jest": "^29.7.0",
